#!/usr/bin/bash
# checks for number of updates available
# does so every hour (or whatever time period you set sleep to)
while true; do
	number=$(dnf check-update 2>/dev/null | wc -l);
	if (( $number > 20  )); then
		notify-send -u critical "Girl, you gotta update ($number new updates)"
	elif (($number > 2)); then
		notify-send -u low "You got $number new updates"
	fi
	sleep 3600
done
